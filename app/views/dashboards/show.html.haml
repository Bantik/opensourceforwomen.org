- content_for :title, "#{current_user.formatted_username}'s Dashboard".html_safe

.content
  .row
    .large-12.columns
      %h1= "#{current_user.formatted_username}'s Dashboard"

  .row

    .large-6.columns

      %h3
        Bookmarked Projects
      - if @dashboard.project_count == 0
        %p
          You don't have any projects yet!
      - else
        %ul
        - @dashboard.projects.each do |project|
          %li
            = link_to project.name, project_path(project)

      %h3
        Pair Partners
      - if @dashboard.pair_partner_count == 0
        %p
          You don't have any pair partners yet. Why not
          = link_to "find one now", pair_profiles_path
          ?
      - else
        %ul
        - @dashboard.pair_partners.each do |partner|
          %l1
            = link_to partner.formatted_username, user_path(partner)

    .large-6.columns

      .panel
        %ul
          %li
            = link_to "Open Source Projects", projects_path
            %p
              Look for a curated open source project, or submit a new one for other members to check out.
          %li
            = link_to "Pair Programming", pair_profiles_path
            %p
              Manage your pair profile and connect with other women who want to pair program on an open source project.

          %li
            = link_to "Mentoring", "#"
            %p
              Sign up to be a mentor, or find a mentor to work with you.

          %li
            = link_to "Slack", "#"
            %p
              Sign up to join our Slack community.

