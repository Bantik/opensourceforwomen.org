- content_for :title, "About Open Source for Women"

.content
  .row
    .large-5.columns

      %h1 Sign In to Your Account

      = form_for(resource, :as => resource_name, :url => user_session_path(resource_name)) do |f|
        %div
          = f.label :email
          = f.email_field :email, :autofocus => true
        %div
          = f.label :password
          = f.password_field :password
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me
        %div
          = f.submit "Sign in", class: "small button"
      = render "devise/shared/links"

    .large-5.columns
      %h1 Create a New Account
      = form_for(resource, :as => resource_name, :url => user_registration_path) do |f|
        = devise_error_messages!
        %div
          = f.label :username
          = f.email_field :username
        %div
          = f.label :email
          = f.email_field :email
        %div
          = f.label :password
          = f.password_field :password
        %div
          = f.label :password_confirmation
          = f.password_field :password_confirmation
        %div= f.submit "Create account", class: "small button"
