- content_for :title, @project.name

.content
  .row
    .large-6.columns
      %h1 Project Details
      %p.back-navigation
        &laquo;
        = link_to "Back to Projects", projects_path
  .row
    .large-6.columns
      %ul.pricing-table
        %li.title
          = @project.full_name
        %li.bullet-item
          = @project.description
        %li.bullet-item
          = @project.language
        - if @project.homepage.present?
          %li.bullet-item
            = @project.homepage
        %li.bullet-item
          = @project.repo_url
    .large-6.columns
      - if @current_user.projects.include? @project
        = form_tag "/bookmarks" do
          = hidden_field_tag :project_id, @project.id
          = hidden_field_tag :remove, true
          = submit_tag "Remove Bookmark", class: "button small"
      - else
        = form_tag "/bookmarks" do
          = hidden_field_tag :project_id, @project.id
          = submit_tag "Save to Bookmarks", class: "button small"
      - if @project.bookmarking_users
        %h3
          Bookmarked by
          = pluralize(@project.bookmarking_users.count, "person")
        %ul
          - @project.bookmarking_users.each do |user|
            - next unless user.pair_profile
            %li
              = link_to user.formatted_username, pair_profile_path(user.pair_profile)
